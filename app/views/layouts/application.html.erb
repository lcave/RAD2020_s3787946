<!DOCTYPE html>
<html>

<head>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
</head>

<body>
    <%= render partial: 'layouts/header', hot_topics: @hot_topics %>
    <div style="text-align:center;">
        <%flash.each do|message_type, message|%>
        <div class="alert alert-<%=message_type%>"><%=message%></div>
        <%end%>
    </div>
    <div class="container" style="background-color: white; padding: 20px 10px; margin-top: 15px; margin-bottom: 60px;">
        <%= yield %>
    </div>
    <%= debug(params) if Rails.env.development? %>
    <%= render 'layouts/footer' %>
</body>

</html>