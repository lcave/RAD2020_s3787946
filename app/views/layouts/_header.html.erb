<header class="navbar navbar-fixed-top navbar-inverse animated-background" <%if(params[:topic].present?)%> id="<%=params[:topic]%>" <%end%>>
    <div class="container">
        <%= link_to "News+", root_path, id: "logo" %>
        <nav>
            <ul id="site" class="nav navbar-nav navbar-left">
                <li><%= link_to "Home", root_path %></li>
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Hot Topics
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <% 2.times do |i|%>
                        <% topic = params[:top_topics][i][0]%>

                        <li><a class="dropdown-item" href="?topic=<%= topic %>"><%= topic %></a></li>
                        <% end %>
                    </ul>
            </ul>
            <ul id="profile" class="nav navbar-nav navbar-right">
                <% if logged_in? %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <b> <%= current_user.name %> <b class="caret"></b></b></a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Profile", current_user%></li>
                        <li><%= link_to "Settings", edit_user_path(current_user)%></li>
                        <li class="divider"></li>
                        <li><%= link_to "Log out", logout_path, method: :delete%></li>
                    </ul>
                </li>
                <% else %>
                <li>
                    <%= link_to login_path do %>
                    <button type="button" class="btn btn-success">Log In</button>
                    <% end %>
                </li>
                <li>
                    <%= link_to signup_path do %>
                    <button type="button" class="btn btn-primary">Sign Up</button>
                    <% end %>
                </li>
                <% end %>
            </ul>

        </nav>
    </div>
</header>