<div class="row">
    <h1>
        <%=@user.name%>
    </h1>
    <h5 style="text-align:center;"><%= @user.created_at %></h4>
</div>
<div class="row">
    <div class="col-sm-1 posts-col">
        <h4>Recent Posts</h4>
        <ul class="posts">
            <% @posts.limit(5).each do |post| %>
            <li style="padding:10px;">
                <div>
                    <div class="row" style="max-width: 510px;">
                        <b><%= link_to post.title, post %></b>
                    </div>
                    <div class="row">
                        Views: <%= number_with_delimiter(post.views, :delimiter => ',') %> |
                        Comments: <%= post.comment_count %> |
                        <%= time_ago_in_words(post.created_at) %> ago
                    </div>
                </div>
            </li>
            <% end %>
        </ul>
    </div>
    <div class="col-sm-1 posts-col">
        <h4>Recent Comments</h4>
        <ul class="posts">
            <% @comments.limit(5).each do |comment| %>
            <li style="padding:10px;">
                <div style="padding:10px;">
                    <div class="row" style="max-width: 510px;">
                        <b><%= link_to Micropost.find_by_id(comment.commentable_id).title, Micropost.find_by_id(comment.commentable_id) %></b>
                    </div>
                    <div class="row">
                        "<em><%=comment.body%></em>"
                    </div>
                </div>
            </li>
            <% end %>
        </ul>
    </div>
</div>